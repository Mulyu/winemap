<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :email %><br>
    <%= f.email_field :email %>
  </div>
  <div class="field">
    <%= f.label :password %><br>
    <%= f.password_field :password_digest %>
  </div>
  <div class="field">
    <%= f.label :age %><br>
    <%= f.number_field :age %>
  </div>
  <div class="field">
    <%= f.label :gender %><br>
    男:<%= f.radio_button :gender, 1, {:checked=>true} %>
    女:<%= f.radio_button :gender, 2 %>
  </div>
  <div class="field">
    <%= f.label :prefecture %><br>
    <%= f.collection_select :prefecture_id, Prefecture.all, :id, :name, :include_blank => true %>
  </div>
  <div class="field">
    <%= f.label :home_prefecture_id %><br>
    <%= f.collection_select :home_prefecture_id, Prefecture.all, :id, :name, :include_blank => true %>
  </div>
  <div class="field">
    <%= f.label :job %><br>
    <%= f.text_field :job %>
  </div>
  <div class="field">
    <%= f.label :married %><br>
    <%= f.check_box :married, {}, 'y', 'n' %>
  </div>
  <div class="field">
    <%= f.label :introduction %><br>
    <%= f.text_area :introduction %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
