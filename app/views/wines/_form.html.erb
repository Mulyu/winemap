<%= form_for(@wine) do |f| %>
  <% if @wine.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@wine.errors.count, "error") %> prohibited this wine from being saved:</h2>

      <ul>
      <% @wine.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field textField must" id="nameField">
    <%= f.label :name ,"Name"%>
    <%= f.text_field :name%>
  </div>
  <div class="field textField must" id="regionField">
    <%= f.label :country_or_region ,"Country"%>
    <%= f.text_field :input_region %>
  </div>
  <div class="field textField must" id="winetypeField">
    <%= f.label :winetype_id  ,"Type"%>
    <%= f.collection_select :winetype_id, @winetypes, :id, :name, :include_blank => true %>
  </div>
  <div class="field textField" id="wineryField">
    <%= f.label :winery  ,"Winery"%>
    <%= f.text_field :winery %>
  </div>
  <div class="field textField" id="yearField">
    <%= f.label :year  ,"Year"%>
    <%= f.number_field :year %>
  </div>
  <div class="field textField" id="priceField">
    <%= f.label :price ,"Price"%>
    <%= f.number_field :price %>
  </div>
  <div class="field sliderField" id="scoreField">
    <%= f.label :score ,"好み" %>
    1<%= f.radio_button :score, 1 %>
    2<%= f.radio_button :score, 2 %>
    3<%= f.radio_button :score, 3, {:checked=>true} %>
    4<%= f.radio_button :score, 4 %>
    5<%= f.radio_button :score, 5 %>
  </div>
  <div class="field sliderField" id="bodyField">
    <%= f.label :body  ,"重さ"%>
    1<%= f.radio_button :body, 1 %>
    2<%= f.radio_button :body, 2 %>
    3<%= f.radio_button :body, 3, {:checked=>true} %>
    4<%= f.radio_button :body, 4 %>
    5<%= f.radio_button :body, 5 %>
  </div>
  <div class="field sliderField" id="sweetField">
    <%= f.label :sweetness ,"甘み" %>
    1<%= f.radio_button :sweetness, 1 %>
    2<%= f.radio_button :sweetness, 2 %>
    3<%= f.radio_button :sweetness, 3, {:checked=>true} %>
    4<%= f.radio_button :sweetness, 4 %>
    5<%= f.radio_button :sweetness, 5 %>
  </div>
  <div class="field sliderField" id="sournField">
    <%= f.label :sourness  ,"酸味"%>
    1<%= f.radio_button :sourness, 1 %>
    2<%= f.radio_button :sourness, 2 %>
    3<%= f.radio_button :sourness, 3, {:checked=>true} %>
    4<%= f.radio_button :sourness, 4 %>
    5<%= f.radio_button :sourness, 5 %>
  </div>
  <div class="field checkField" id="varietyField">
    <%= f.label :winevariety %>
    <%= collection_check_boxes(:wine, :winevariety_ids, @winevarieties, :id, :name) do |b| %>
      <%= b.check_box %>
      <%= b.label { b.text } %>
    <% end %>
  </div>
  <div class="field checkField" id="situationField">
    <%= f.label :situation %>
    <%= collection_check_boxes(:wine, :situation_ids, @situations, :id, :name) do |b| %>
      <%= b.check_box %>
      <%= b.label { b.text } %>
    <% end %>
  </div>
  <div class="field" id="photoField">
    <%= f.label :photo %>
    <%= f.file_field :photo, accept: 'image/*' %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
