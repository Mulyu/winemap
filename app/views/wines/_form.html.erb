<%= form_for(@wine) do |f| %>
  <% if @wine.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@wine.errors.count, "error") %> prohibited this wine from being saved:</h2>

      <ul>
      <% @wine.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :country_or_region %><br>
    <%= f.text_field :input_region %>
  </div>
  <div class="field">
    <%= f.label :body %><br>
    1<%= f.radio_button :body, 1 %>
    2<%= f.radio_button :body, 2 %>
    3<%= f.radio_button :body, 3, {:checked=>true} %>
    4<%= f.radio_button :body, 4 %>
    5<%= f.radio_button :body, 5 %>
  </div>
  <div class="field">
    <%= f.label :sweetness %><br>
    1<%= f.radio_button :sweetness, 1 %>
    2<%= f.radio_button :sweetness, 2 %>
    3<%= f.radio_button :sweetness, 3, {:checked=>true} %>
    4<%= f.radio_button :sweetness, 4 %>
    5<%= f.radio_button :sweetness, 5 %>
  </div>
  <div class="field">
    <%= f.label :sourness %><br>
    1<%= f.radio_button :sourness, 1 %>
    2<%= f.radio_button :sourness, 2 %>
    3<%= f.radio_button :sourness, 3, {:checked=>true} %>
    4<%= f.radio_button :sourness, 4 %>
    5<%= f.radio_button :sourness, 5 %>
  </div>
  <div class="field">
    <%= f.label :winetype_id %><br>
    <%= f.collection_select :winetype_id, Winetype.all, :id, :name, :include_blank => true %>
  </div>
  <div class="field">
    <%= f.label :year %><br>
    <%= f.number_field :year %>
  </div>
  <div class="field">
    <%= f.label :winevariety %><br>
    <%= collection_check_boxes(:wine, :winevariety_ids, Winevariety.all, :id, :name) do |b| %>
      <%= b.label { b.check_box + b.text } %>
    <% end %>
  </div>
  <div class="field">
    <%= f.label :score %><br>
    1<%= f.radio_button :score, 1 %>
    2<%= f.radio_button :score, 2 %>
    3<%= f.radio_button :score, 3, {:checked=>true} %>
    4<%= f.radio_button :score, 4 %>
    5<%= f.radio_button :score, 5 %>
  </div>
  <div class="field">
    <%= f.label :price %><br>
    <%= f.number_field :price %>
  </div>
  <div class="field">
    <%= f.label :situation %><br>
    <%= collection_check_boxes(:wine, :situation_ids, Situation.all, :id, :name) do |b| %>
      <%= b.label { b.check_box + b.text } %>
    <% end %>
  </div>
  <div class="field">
    <%= f.label :winery %><br>
    <%= f.text_field :winery %>
  </div>
  <div class="field">
    <%= f.label :photo %><br>
    <%= f.file_field :photo, accept: 'image/*' %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
