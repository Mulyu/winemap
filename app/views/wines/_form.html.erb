<%= form_for(@wine) do |f| %>
  <% if @wine.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@wine.errors.count, "error") %> prohibited this wine from being saved:</h2>

      <ul>
      <% @wine.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :country_or_region %><br>
    <%= f.text_field :input_region %>
  </div>
  <div class="field">
    <%= f.label :body %><br>
    <%= f.range_field :body, min: 0, max: 5 %>
  </div>
  <div class="field">
    <%= f.label :sweetness %><br>
    <%= f.range_field :sweetness, min: 0, max: 5 %>
  </div>
  <div class="field">
    <%= f.label :sourness %><br>
    <%= f.range_field :sourness, min: 0, max: 5 %>
  </div>
  <div class="field">
    <%= f.label :winetype_id %><br>
    <%= f.collection_select :winetype_id, @winetypes, :id, :name, :include_blank => true %>
  </div>
  <div class="field">
    <%= f.label :year %><br>
    <%= f.number_field :year %>
  </div>
  <div class="field">
    <%= f.label :winevariety %><br>
    <%= collection_check_boxes(:wine, :winevariety_ids, @winevarieties, :id, :name) do |b| %>
      <%= b.label { b.check_box + b.text } %>
    <% end %>
  </div>
  <div class="field">
    <%= f.label :score %><br>
    <%= f.range_field :score, min: 1, max: 5 %>
  </div>
  <div class="field">
    <%= f.label :price %><br>
    <%= f.number_field :price %>
  </div>
  <div class="field">
    <%= f.label :situation %><br>
    <%= collection_check_boxes(:wine, :situation_ids, @situations, :id, :name) do |b| %>
      <%= b.label { b.check_box + b.text } %>
    <% end %>
  </div>
  <div class="field">
    <%= f.label :winery %><br>
    <%= f.text_field :winery %>
  </div>
  <div class="field">
    <%= f.label :photo %><br>
    <%= f.file_field :photo, accept: 'image/*' %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
