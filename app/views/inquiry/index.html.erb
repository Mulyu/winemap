<%= form_for @inquiry, url: inquiry_confirm_path do |f| %>
  <div>
    <h1>お問い合わせ</h1>
  </div>

  <% if @inquiry.errors.any? %>
    <div id="error_explanation">
      <h2>入力内容にエラーがあります</h2>
      <ul>
        <% @inquiry.errors.each do |attr, msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <table class="table">
    <tr>
      <th>名前：</th>
      <td><%= f.text_field :name %></td>
    </tr>
    <tr>
      <th>メールアドレス：</th>
      <td><%= f.text_field :email %></td>
    </tr>
    <tr>
      <th>お問い合わせ内容(必須)：</th>
      <td><%= f.text_area :message %></td>
    </tr>
  </table>
  <%= f.submit '確認' %>
<% end %>