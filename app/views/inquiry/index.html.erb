<div id="allowBootstrap" role="form">
  <%= form_for @inquiry, url: inquiry_confirm_path do |f| %>
    <div>
      <h1>お問い合わせ</h1>
    </div>

    <% if @inquiry.errors.any? %>
      <div id="error_explanation">
        <h2>入力内容にエラーがあります</h2>
        <ul>
          <% @inquiry.errors.each do |attr, msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field form-group clearfix">
      <div class="col-sm-2">
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control input-sm' %>
      </div>
    </div>

    <div class="field form-group clearfix">
      <div class="col-sm-3">
        <%= f.label :email %>
        <%= f.email_field :email, class: 'form-control input-sm' %>
      </div>
    </div>

    <div class="field form-group clearfix">
      <div class="col-sm-4">
        <%= f.label :message %>(必須)
        <%= f.text_area :message, rows: 3, class: 'form-control input-sm' %>
      </div>
    </div>

    <div class="col-sm-1">
      <%= f.submit '確認', class: 'btn btn-default btn-sm' %>
    </div>
  <% end %>
</div>